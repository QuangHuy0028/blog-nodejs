<div class="container-md my-5">
    <div class="row">
        <div class="col col-md-6">
            <div class="heading">
                <h1 style="font-size: 50px; margin-bottom: 30px;">
                    {{obj.name}}
                </h1>
                <p style="line-height: 30px;">{{obj.description}}</p>
            </div>
        </div>
        <div class="col col-md-6">
            <div class="thumbnail">
                <img src="{{obj.image}}" alt="{{obj.name}}" style="width: 100%; height: 100%; object-fit: cover;">
            </div>
        </div>
    </div>
    <hr class="my-5">
    <div class="row">
        <div class="col col-md-2" style="padding: 20px;">
            <h2 style="margin-bottom: 20px;">Menu</h2>
            <ol style="padding-left: 0px; list-style:none;">
                <li>Option</li>
                <li>Option</li>
                <li>Option</li>
                <li class="my-3">
                    <form action="" method="POST" id="form-update">
                        <button type="submit" class="btn btn-1">Update the blog</button>
                    </form>
                </li>
            </ol>
        </div>
        <div class="col col-md-10" style="background-color: whitesmoke; padding: 20px; border-radius: 10px;">
            <div class="content">
                {{{content}}}
            </div>
        </div>
    </div>
</div>