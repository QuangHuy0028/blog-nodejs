<div class="container-md my-5">
    <div class="row">
        <div class="col-6 col-md-2">
            <h1>Menu</h1>
            {{!-- Options, Search, Controller, Menu --}}
            <div class="mt-3">
                <a type="link" href="/blog/create" class="btn btn-1">Create a new blog.</a>
                <a type="link" href="/blog/delete" class="btn btn-1 mt-3">Delete a blog.</a>
            </div>
        </div>
        <div class="col-12 col-md-10">
            <div class="">
                <form action="/search" method="GET" class="">
                    <div class="mb-3">
                        <label for="" class="form-label mb-3">
                            <h2>Search</h2>
                        </label>
                        <div class="d-flex nowrap">
                            <div class="col-8 mx-3">
                                <input type="text" class="form-control" name="q" id="search-input"
                                    placeholder="A blog name" />
                                <div class="mb-3">
                                    <label for="createAt" class="form-label mt-4">Create date</label>
                                    <input type="date" class="form-control" name="createAt" id="createAt"
                                        aria-describedby="createAtHelp" placeholder="Date's blog">
                                    <small id="createAtHelp" class="form-text text-muted">The date's upload the
                                        blog.</small>
                                </div>
                            </div>
                            <div>
                                <button class="btn btn-primary" type="submit"
                                    style="width: 100px; max-height: 70px; margin: auto 0;">Search</button>
                            </div>
                        </div>
                    </div>
                </form>
                </form>
            </div>
            <h2 class="mb-5">Search Result: <b>{{Text}}</b></h2>
            {{#each blog}}
            <article class="item my-3">
                <h3 class="item__heading">{{this.name}}</h3>
                <p class="item__des">{{this.description}}</p>
            </article>
            {{/each}}
        </div>
    </div>
</div>