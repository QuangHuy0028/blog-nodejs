<div class="container-md my-5">
  <div class="row">
    <div class="col-6 col-md-2">
      {{!-- Options, Search, Controller, Menu --}}
      <h1>Menu</h1>
      <div class="mt-3">
        <a type="link" href="/blog/create" class="btn btn-1">Create a new blog.</a>
        <a type="link" href="/blog/delete" class="btn btn-1 mt-3">Delete a blog.</a>
      </div>
    </div>
    <div class="col-12 col-md-10">
      <form action="/search" method="GET" class="">
        <div class="mb-3">
          <label for="" class="form-label mb-3">
            <h2>Search</h2>
          </label>
          <div class="d-flex nowrap">
            <div class="col-8 mx-3">
              <input type="text" class="form-control" name="q" id="search-input" placeholder="A blog name" />
              <div class="mb-3">
                <label for="createAt" class="form-label mt-4">Create date</label>
                <input type="date" class="form-control" name="createAt" id="createAt" aria-describedby="createAtHelp"
                  placeholder="Date's blog">
                <small id="createAtHelp" class="form-text text-muted">The date's upload the blog.</small>
              </div>
            </div>
            <button class="btn btn-primary" type="submit"
              style="width: 100px; max-height: 70px; margin: auto 0;">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>